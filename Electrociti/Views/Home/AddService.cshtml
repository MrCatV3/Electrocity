@{
    ViewData["Title"] = "AddService";
}
@using Electrociti.Models
@model Service

<form asp-action="AddService" asp-controller="Home" method="post" class="form-container">
    <div>
        <div>
            <h1>Добавление услуги</h1>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            <input asp-for="ServiceName" type="text" id="sName" name="ServiceName" placeholder="Название услуги" autocomplete="off" required />
        </div>

        <div>
            <input asp-for="ServiceCost" type="text" id="sCost" name="ServiceCost" placeholder="Стоимость услуги" pattern="[0-9]+" title="Введите только цифры" autocomplete="off" required />
        </div>

        <button type="submit">Сохранить</button>
    </div>
</form>
