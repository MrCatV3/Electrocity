@{
    ViewData["Title"] = "Login";
}
<div class="login-container">
    <form asp-action="Login" asp-controller="Home" method="post" class="login-form">
        <div class="login-header">
            <h1 class="login-title">Добро пожаловать!</h1>
        </div>

        <div class="login-input">
            <input type="text" id="login" name="login" placeholder="Телефон" autocomplete="off" class="login-textbox" />
        </div>

        <div class="login-input">
            <input type="password" id="password" name="password" placeholder="Пароль" class="login-textbox" />
        </div>

        <button type="submit" class="login-button">Войти</button>

        <button type="submit" formaction="/Home/Register" class="register-button">Зарегистрироваться</button>
    </form>
</div>

