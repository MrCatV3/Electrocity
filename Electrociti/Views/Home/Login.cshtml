@{
    ViewData["Title"] = "Login";
}
<div class="login-container">
    <form asp-action="Login" asp-controller="Home" method="post" class="login-form">
        <div class="login-header">
            <h1 class="login-title">Добро пожаловать!</h1>
        </div>

        <div class="validation-summary">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="login-input">
            <input type="text" id="login" name="login" placeholder="Телефон" pattern="[0-9]+" title="Пример номера: 8999999999" required minlength="11" maxlength="11" autocomplete="off" class="login-textbox" />
            @Html.ValidationMessage("login", "", new { @class = "text-danger" })
        </div>

        <div class="login-input">
            <input type="password" id="password" name="password" placeholder="Пароль" required class="login-textbox" />
            @Html.ValidationMessage("password", "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="login-button">Войти</button>
    </form>
</div>
