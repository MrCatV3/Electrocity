@model Electrociti.Models.EmployeeWork
@{
    ViewData["Title"] = "AddEmployeeWork";
}

<form asp-action="AddEmployeeWork" asp-controller="Home" method="post" class="form-container">
    <div>
        <h1>Создание записи</h1>
    </div>
  
    <div>
        <input type="text" asp-for="EmployeeWorkName" placeholder="Имя клиента" pattern="[A-Za-zА-Яа-яЁё\s\-]+" title="Введите только буквы" autocomplete="off" required minlength="1" />
        <span asp-validation-for="EmployeeWorkName" class="text-danger"></span>
    </div>

    <div>
        <input type="text" asp-for="EmployeeWorkPhone" placeholder="Телефон клиента" pattern="[0-9]+" title="Пример номера: 8999999999" required minlength="11" maxlength="11" autocomplete="off" />
        <span asp-validation-for="EmployeeWorkPhone" class="text-danger"></span>
    </div>

    <div>
        <input type="text" asp-for="EmployeeWorkAdress" placeholder="Адрес клиента" autocomplete="off" required minlength="1" />
        <span asp-validation-for="EmployeeWorkAdress" class="text-danger"></span>
    </div>

    <div>
        <input type="text" asp-for="EmployeeWorkTime" placeholder="Время записи" pattern="^([0-1][0-9]|2[0-3]):[0-5][0-9]$" title="Введите время в формате ЧЧ:ММ (например, 14:30)" minlength="5" maxlength="5" required />
        <span asp-validation-for="EmployeeWorkTime" class="text-danger"></span>
    </div>

    <div>
        <input type="date" asp-for="EmployeeWorkDate" min="@ViewBag.Today" required />
        <span asp-validation-for="EmployeeWorkDate" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId" />
    <button type="submit">Сохранить</button>
</form>
