@{
    ViewData["Title"] = "AddEmployeeWork";
}

<form asp-action="AddEmployeeWork" asp-controller="Home" method="post" class="form-container">
    <div>
        <h1>Создание записи</h1>
    </div>
    <div>
        @if (ViewData.ModelState.Any(x => x.Value.Errors.Count > 0))
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <p>@error.ErrorMessage</p>
                }
            </div>
        }
    </div>
    <div>
        <input type="text" id="eName" name="EmployeeWorkName" placeholder="Имя клиента" pattern="[A-Za-zА-Яа-яЁё]+" title="Введите только буквы" autocomplete="off" required minlength="1" />
    </div>

    <div>
        <input type="text" id="ePhone" name="EmployeeWorkPhone" placeholder="Телефон клиента" pattern="[0-9]+" title="Пример номера: 8999999999" required minlength="11" maxlength="11" autocomplete="off" />
    </div>

    <div>
        <input type="text" id="eAddress" name="EmployeeWorkAdress" placeholder="Адрес клиента" autocomplete="off" required minlength="1" />
    </div>
    <div>
        <input type="text" id="eTime" name="EmployeeWorkTime" placeholder="Время записи" pattern="^([0-1][0-9]|2[0-3]):[0-5][0-9]$" title="Введите время в формате ЧЧ:ММ (например, 14:30)" minlength="5" maxlength="5" required />
    </div>
    <div>
        <input type="date" id="eDate" name="SelectDate" min="@ViewBag.Today" required />
    </div>
    <input type="hidden" name="employeeId" value="@ViewBag.EmployeeId" />
    <button type="submit">Сохранить</button>
</form>
